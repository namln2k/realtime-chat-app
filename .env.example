// Example .env file - copy this to .env and adjust values

// API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_SOCKET_URL=http://localhost:3000

// App Configuration
VITE_APP_NAME=Real-time Chat App
VITE_APP_VERSION=1.0.0

// Feature Flags (for future use)
VITE_ENABLE_FILE_SHARING=true
VITE_ENABLE_VOICE_CALLS=false
VITE_ENABLE_VIDEO_CALLS=false
VITE_ENABLE_MESSAGE_ENCRYPTION=false

// Authentication
VITE_AUTH_TOKEN_KEY=authToken
VITE_AUTH_USER_KEY=user

// Logging
VITE_LOG_LEVEL=info

// Other configurations
VITE_MAX_MESSAGE_LENGTH=5000
VITE_MAX_FILE_SIZE=10485760
VITE_MESSAGE_PAGINATION_LIMIT=50
